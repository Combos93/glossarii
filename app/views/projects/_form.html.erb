
<%= form_for(@project) do |f| %>
  <%#= render partial: 'partials/form_errors', local: { model: @project } %>

  <div class="form-field">
    <%= f.label :title, 'Название проекта', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-text-field' %>
  </div>

  <div class="form-field">
    <%= f.label :description, 'Описание', class: 'form-label' %>
    <%= f.text_field :description, class: 'form-text-field' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить' %>
    <%= link_to 'вернуться', :back %>
  </div>
<% end %>
